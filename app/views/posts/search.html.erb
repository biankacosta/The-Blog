<%= render "shared/navbar" %>

<div class = "page-title text-center text-break">
    <hr>
    <h1>THE BLOG</h1>
    <hr>
</div>

<h1>Showing all the results for "<%= params[:query] %>"</h1>
<% if @posts.present? %>
  <ul>
    <% @posts.each do |post| %>
      <li><%= link_to post.title, post_path(post) %></li>
    <% end %>
  </ul>
<% else %>
  <p>No results found for "<%= params[:query] %>". Try to search somenthing different.</p>
<% end %>

<%= render "shared/footer" %>